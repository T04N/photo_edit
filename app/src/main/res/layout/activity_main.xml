<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    tools:ignore="ExtraText"
    android:background="@android:color/white">

    <!-- ImageView để hiển thị ảnh đã chọn hoặc chụp -->
    <ImageView
        android:id="@+id/imgPreview"
        android:layout_width="368dp"
        android:layout_height="432dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/image_border"
        android:contentDescription="Preview ảnh"
        android:padding="4dp"
        android:scaleType="centerCrop"
        android:elevation="4dp" />

    <!-- LinearLayout ngang chứa các nút -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginBottom="24dp">

        <!-- Nút Chọn Ảnh từ BST -->
        <Button
            android:id="@+id/btnLoadFromGallery"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/custom_button"
            android:text="Chọn ảnh từ BST"
            android:textColor="@android:color/white"
            android:elevation="2dp"
            android:textAllCaps="false" />

        <!-- Nút Chụp Ảnh -->
        <Button
            android:id="@+id/btnCapture"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:background="@drawable/custom_button"
            android:text="Chụp ảnh"
            android:textColor="@android:color/white"
            android:elevation="2dp"
            android:textAllCaps="false" />
    </LinearLayout>

    <!-- Nút Chỉnh sửa -->
    <Button
        android:id="@+id/btnEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/custom_button"
        android:padding="16dp"
        android:text="Chỉnh sửa"
        android:textColor="@android:color/white"
        android:elevation="2dp"
        android:textAllCaps="false" />

    <!-- Nút Hiển thị Danh sách Hình ảnh -->
    <Button
        android:id="@+id/btnShowImageList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/custom_button"
        android:padding="16dp"
        android:text="Hiển thị Danh sách Hình ảnh"
        android:textColor="@android:color/white"
        android:elevation="2dp"
        android:textAllCaps="false" />

    <!-- Nút Upload lên Cloud Storage -->
    <Button
        android:id="@+id/btnUpload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/purple_700"
        android:elevation="2dp"
        android:padding="16dp"
        android:text="Upload lên Cloud Storage"
        android:textAllCaps="false"
        android:textColor="@android:color/white" />
</LinearLayout>
